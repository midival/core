{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["es2022"],
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext"
  },
  "include": ["src/"],
  "exclude": ["!src/", "docs/"],
}
